{{#if updateQuestionForm}}
  <h2>Update {{question.author}}'s Question.</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Enter your Name:</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>
      <div class="form-group">
        <label for="problem">Enter Problem:</label>
        {{input value=problem id="problem" placeholder=question.problem}}
      </div>
      <div class="form-group">
        <label for="notes">Enter Notes(if needed):</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>
      <button {{action 'update' question}} class="btn">Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}} class="btn">Update</button>
{{/if}}
