{{#if addQuestion}}
  <h2>New Question</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="problem">Enter Question:</label>
        {{input value=problem id="problem"}}
      </div>
      <div class="form-group">
        <label for="author">Enter your Name:</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="notes">Enter Notes(if needed):</label>
        {{input value=notes id="notes"}}
      </div>
      <button {{action 'saveQuestion1'}} class="btn">Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}} class="btn">New Question</button>
{{/if}}
