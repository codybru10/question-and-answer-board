{{#if addNewAnswer}}
<h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="solution">Enter Answer:</label>
        {{input value=solution id="solution"}}
      </div>
      <div class="form-group">
        <label for="user">Enter your name:</label>
        {{input value=user id="user"}}
      </div>

      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}} class="btn">Answer</button>
{{/if}}
